# Use the official Jenkins LTS image
FROM jenkins/jenkins:lts

# Switch to the root user
USER root

# Install Docker CLI, Terraform, and AWS CLI in one step
RUN apt-get update && \
    apt-get install -y \
        docker.io \
        wget \
        curl \
        unzip && \
    # Install Terraform
    wget https://releases.hashicorp.com/terraform/1.5.7/terraform_1.5.7_linux_amd64.zip && \
    unzip terraform_1.5.7_linux_amd64.zip -d /usr/local/bin && \
    rm terraform_1.5.7_linux_amd64.zip && \
    # Install AWS CLI
    curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && \
    unzip awscliv2.zip && \
    ./aws/install && \
    rm -rf awscliv2.zip aws && \
    # Clean up
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Grant Jenkins user access to Docker
RUN usermod -aG docker jenkins

# Switch back to the Jenkins user
USER jenkins

# Preconfigure Jenkins plugins for pipeline and Docker integration
RUN jenkins-plugin-cli --plugins "pipeline-model-definition docker-workflow git"

# Expose Jenkins default port
EXPOSE 8080

# Entry point for Jenkins
ENTRYPOINT ["/usr/bin/tini", "--", "/usr/local/bin/jenkins.sh"]
